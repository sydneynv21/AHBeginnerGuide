<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/textViewFacultyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:textColor="#3a6fb0"
        android:textSize="20sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/example_faculty_name" />

    <TextView
        android:id="@+id/textViewFacultyContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFacultyName"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        android:fontFamily="serif"
        android:text="@string/example_faculty_contact" />

</RelativeLayout>